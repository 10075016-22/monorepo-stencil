{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "nodenext",
        "target": "es2022",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "lib": [
            "dom",
            "es2022"
        ],
        "moduleResolution": "nodenext"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}