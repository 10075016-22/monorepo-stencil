{
    "name": "shared-ui",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/shared-ui/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": [
                "{projectRoot}/dist",
                "{projectRoot}/loader"
            ],
            "options": {
                "cwd": "packages/shared-ui",
                "command": "stencil build"
            },
            "configurations": {
                "production": {
                    "command": "stencil build --prod"
                }
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "packages/shared-ui",
                "command": "stencil build --dev --watch --serve"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "packages/shared-ui",
                "command": "stencil test --spec"
            }
        }
    },
    "tags": [
        "type:ui",
        "scope:shared"
    ]
}